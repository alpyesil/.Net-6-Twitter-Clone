@model List<Post>
<link rel="stylesheet" href="~/css/post.css" asp-append-version="true" />

<partial name="_Search1" />


<div class="explorebigimg">
    <img src="https://picsum.photos/seed/picsum/336/674" alt="" />
</div>

<partial name="_Trends1" />


@foreach (var item in Model)
{
    <div class="box">
        <div class="tweetTitle">

            <div class="titleImg">
                <img src="@item.User.ProfileImagePath" alt="">
            </div>
            <div class="profilename">
                <a asp-controller="Profile" asp-action="Index" asp-route-id="@item.User.UserName">@item.User.Name</a>
                <a asp-controller="Profile" asp-action="Index" asp-route-id="@item.User.UserName" class="username">@@@item.User.UserName</a>
            </div>
            <div class="profilesett">
                <a asp-controller="Post" asp-action="Detail" asp-route-id="@item.Id" class="timer">@item.CreatedAt</a>
            </div>
        </div>
        <div class="row2">
            <div class="tweetContent">
                <p>
                    @item.Content
                </p>
                <div class="tweetContentImg">
                    @if (@item.ContentImgPath != null)
                    {
                        <img src="@item.ContentImgPath" alt="">

                    }

                </div>
            </div>
            <div class="tweetNav">
                <li>
                    <a id="comment" asp-controller="Post" asp-action="Detail" asp-route-id="@item.Id"><i class="far fa-comment"></i></a>
                </li>
                <li>
                    <a href=""><i class="fas fa-retweet"></i></a>
                </li>
                <li>
                    <a href=""><i class="far fa-heart"></i></a>
                </li>
                <li>
                    <a href=""><i class="fas fa-share-square"></i></a>
                </li>
            </div>
        </div>
    </div>
}


@section Sidebar{

@await Component.InvokeAsync("Trend")
<partial name="_Footer" />

}




