@model User

<div class="user_profile">
    <div class="div1">
        <div class="div2">
            <img src="@Model.ProfileImageThumb" alt="" />
        </div>
        <div class="div3">
            <img class="user_profile_photo" src="@Model.ProfileImagePath" alt="" />
        </div>
    </div>


    <div class="user_profile_area">
        <div class="profile_settings">
            @if (@Model.UserName == User.Identity.Name)
            {
                <div class="profile_settings_button_area">
                    <a href="">
                        <span>Profili Düzenle</span>
                    </a>
                </div>
            }
            else
            {
                <div class="profile_settings_button_area">
                    <a href="">
                        <span>Takip Et</span>
                    </a>
                </div>
            }

        </div>
        @if (@Model.IsActive == false)
        {
            <div class="user_profile_name">
                <span>@Model.Name</span>
            </div>
        }
        else
        {
            <div class="user_profile_name">
                <span>@Model.Name </span> <i class="fa-solid fa-check"></i>
            </div>
        }
        <div class="user_profile_user_name">
            <span>@@@Model.UserName</span>
        </div>
        <div class="user_profile_special">
            <i class="fa-solid fa-archway"></i>
            <span>@(((DateTime)Model.CreatedAt).ToString("MMMM yyyy")) tarihinde katıldı</span>
        </div>
        <div class="user_profile_follow">
            <div class="follower">
                <span class="user_count">50</span>
                <span class="user_follow">Takip edilen</span>
            </div>
            <div class="user_profile_followed">
                <div class="followed">
                    <span class="user_count">50</span>
                    <span class="user_follow">Takipçi</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="user_prfile_sec">
    <li>
        <a href="">Tweetler</a>
    </li>
    <li>
        <a href="">Tweetler ve yanıtlar</a>
    </li>
    <li>
        <a href="">Medya</a>
    </li>
    <li>
        <a href="">Beğeni</a>
    </li>
</div>
@await Component.InvokeAsync("User")





@section Sidebar{
<partial name="_Search" />
@await Component.InvokeAsync("Trend")
<partial name="_Trends" />
<partial name="_Footer" />

}